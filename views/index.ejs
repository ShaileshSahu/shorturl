<%- include("./partials/header") %>

<body>
    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://www.kindpng.com/picc/m/23-230826_url-shortener-logo-hd-png-download.png" alt="" width="102" height="87">
        <h1 class="display-5 fw-bold text-body-emphasis">URL Shortner</h1>
        <div class="col-lg-6 mx-auto">
         
          <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary" action="/" method="POST">
                <div class="form-floating mb-3">
                <input required type="text" class="form-control" id="floatingInput" name="url" placeholder="Enter the URL">
                <label for="floatingInput">Enter the URL</label>
                </div>
                <button class="w-30 btn btn-lg btn-primary" type="submit">Create</button>    
          </form>
          <br>
          <% if (path) {%>
          <h4 class="text-primary"><%= path %></h4>
        </div>
        <%}%>
      </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
</body>

